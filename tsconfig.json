{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src/",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@data/*": ["data/*"],
      "@data": ["data"],
      "@assets/*": ["assets/*"],
      "@assets": ["assets"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"],
      "@lib/*": ["lib/*"],
      "@lib": ["lib"],
      "@contexts/*": ["contexts/*"],
      "@contexts": ["contexts"],   
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],   
    }
  },
  "include": ["src", "src/components/Portfolio/Card/.tsx"]
}
